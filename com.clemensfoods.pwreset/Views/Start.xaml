<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="com.clemensfoods.pwreset.Views.Start"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Margin="20" VerticalOptions="Center">
            <Label Text="Reset Password" FontSize="Large" HorizontalOptions="Center" Margin="0,0,0,50"/>
            <Label Text="Restablecer la Contraseña" FontSize="Large" HorizontalOptions="Center" Margin="0,0,0,50"/>
            <Entry
                Placeholder="Scan Your Badge - Escanea tu credencial"
                VerticalOptions="Center"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                IsPassword="True"
                TextChanged="EntryTimeCard_TextChanged"
                Text=""
                x:Name="EntryTimeCard"/>
            <Button Text="Enter- Entrar" CornerRadius="15" Clicked="Enter_Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>